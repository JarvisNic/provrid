
<% if current_user %>

<h1 style="float:left">Mostrando las Tareas para <%= current_user.cordinator.name %>
</h1><br><br><br><br>

<% c = current_user.cordinator %>
<% c.projects.each do |p| %>

<% p.reports.each do |m| %>
<table class = "table table-hover" style="width:9%;position:absolute" >
<thead>
    <tr>
      <th class = "col-md-2 col-lg-2" style="width:30px;">Nombre</th>
      <th class = "col-md-2 col-lg-2" style="width:30px;">Objetivo</th>
      <th class = "col-md-2 col-lg-2" style="width:30px;">Descripci√≥n</th>
      <th class = "col-md-2 col-lg-2" style="width:30px;">Fecha Inicio</th>
      <th class = "col-md-2 col-lg-2" style="width:30px;">Fecha Fin</th>
      <th class = "col-md-2 col-lg-2" style="width:30px;">Actividades</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <ol class="breadcrumb" style="background-color:#2E2E2E;">
  <li style="width:90%;margin:auto;"><a href="#"><%= m.name %><div style ="float:right;width:2em;"><%= link_to new_work_path(:id_report=>  m.id,:name=>m.name),{:title=>"Nueva Tarea"} do %><i class="btn btn-default btn-sm glyphicon glyphicon-ok"></i></div>  
     <%end%></a></li>
</ol>
<% m.works.each do |n| %>
        <td style="width:20%"><%= n.name %></td>
        <td style="width:20%"><%= n.objetive %></td>
        <td style="width:20%"><%= n.descripcion %></td>
        <td style="width:20%"><%= n.fecha_inicio %></td>
        <td style="width:20%"><%= n.fecha_fin %></td>
        <td style="width:20%"><% n.activities.each do |q| %><%= link_to q.name, q %><br><%end %></td>
        <td style="width:20%"><%= link_to new_activity_path(:id_tarea => n.id),{:title=> "Asignar actividad"} do %><i class="btn btn-default btn-sm glyphicon glyphicon glyphicon-pushpin"></i>
        <%end%>
        <%= link_to work_path(n),{:title=> "Editar Tarea"} do %><i class="btn btn-default btn-sm glyphicon glyphicon-pencil"></i>
        <%end%>
        <%= link_to n, method: :delete, data: { confirm: 'Estas seguro?'},:style=>"",:title=>"Eliminar Tarea" do%><i class="btn btn-default btn-sm glyphicon glyphicon glyphicon-remove"></i>
        <%end%>
        </td>
</tbody>
<%end%>


<%end%>
</table>
<%end%>
  


<%paginate(@cordinator)%>
<br>

  <% else %>
<h1>Acceso denegado :)</h1>
<%end%>
